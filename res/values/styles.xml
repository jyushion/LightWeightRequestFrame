<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.Transparent" parent="android:Theme">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="TextTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Large Text Style -->
    <style name="TextAppearance.Large" parent="TextTheme">
        <item name="android:textSize">22sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Title Text Style -->
    <style name="TextAppearance.Title" parent="TextTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Subtitle Text Style -->
    <style name="TextAppearance.Subtitle" parent="TextTheme">
        <item name="android:textSize">18sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- Default Content Text Style -->
    <style name="TextAppearance.Content" parent="TextTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/text_blank</item>
    </style>
    <!-- Grey Content Text Style -->
    <style name="TextAppearance.GreyContent" parent="TextAppearance.Content">
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <!-- Default Button Style -->
    <style name="Button" parent="TextAppearance.Content">
        <item name="android:singleLine">true</item>
    </style>

    <style name="GreenButton" parent="Button"></style>
    <!-- Default EditText Style -->
    <!-- Default Summary Text Style -->
    <style name="EditText" parent="TextAppearance.Content"></style>

    <style name="TextAppearance.Summary" parent="TextTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="TextAppearance.Small" parent="TextTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:singleLine">true</item>
    </style>
    <!-- Grey Summary Text Style -->
    <style name="TextAppearance.GreySummary" parent="TextAppearance.Summary">
        <item name="android:textColor">@color/text_gray</item>
    </style>
    <!-- Default List Style -->
    <style name="List">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <!-- Default Grid Style -->
    <style name="Grid">
        <item name="android:cacheColorHint">@null</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DividerHorizontal">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
    </style>

    <style name="DividerVertical">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    
 <!-- actionsheet -->
    <style name="action_sheet_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="MenuDialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!-- Menu Dialog -->
    <style name="MenuDialogAnimation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/dialog_enter</item>
        <item name="@android:windowExitAnimation">@anim/dialog_exit</item>
    </style>
    <style name="action_sheet_title_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/skin_action_sheet_title</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="action_sheet_secondary_title_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/skin_action_sheet_title</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="action_sheet_btn_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <style name="action_sheet_content_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/common_action_sheet_layout_padding</item>
        <item name="android:paddingLeft">@dimen/common_action_sheet_layout_padding</item>
        <item name="android:paddingRight">@dimen/common_action_sheet_layout_padding</item>
    </style>
</resources>